{
    "name": "koriym/ticket-san",
    "type": "project",
    "description": "",
    "license": "proprietary",
    "require": {
        "php": ">=7.0.0",
        "roave/security-advisories": "dev-master",
        "bear/package": "^1.5",
        "josegonzalez/dotenv": "^2.1",
        "ray/aura-sql-module": "^1.6",
        "madapaja/twig-module": "^2.0",
        "ray/web-form-module": "^0.5.5",
        "koriym/now": "^1.0",
        "koriym/query-locator": "^1.3",
        "koriym/http-constants": "^1.0",
        "bear/aura-router-module": "^2.0",
        "bear/api-doc": "^0.1.1",
        "ray/query-module": "1.x-dev"
    },
    "require-dev": {
        "bear/qatools": "^1.4.9",
        "phpunit/phpunit": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "Koriym\\TicketSan\\": "src/"
        }
    },
    "scripts": {
        "setup": [
            "php bin/setup.php"
        ],
        "test": [
            "phpunit"
        ],
        "coverage": [
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"
        ],
        "cs": [
            "php-cs-fixer fix -v --dry-run",
            "phpcs --standard=./phpcs.xml src"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v",
            "phpcbf src"
        ],
        "serve": "php -S 127.0.0.1:8080 -t public",
        "serve-api": "php -S 127.0.0.1:8081 bootstrap/api.php",
        "api": "php bootstrap/api.php",
        "web": "php bootstrap/web.php"
    }
}
